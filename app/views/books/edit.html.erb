<h2>Editing Book</h2>

<% if @book.errors.any? %>
 <div class="error"><%= @book.errors.count %> errors prohibited this book from being saved:</div>
 <ul>
  <% @book.errors.full_messages.each do |message| %>
   <div class="error2"><li><%= message %></li></div>
  <% end %>
 </ul>
<% end %>

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
 <p>Title</p>
 <%= f.text_field :title %>

 <p>Body</p>
 <%= f.text_area :body %>
 <%= f.submit 'Update Book' %>

<% end %>

<div class="botn"><%= link_to "Show", book_path(@book.id) %>  |  <%= link_to "Back", books_path %></div>
